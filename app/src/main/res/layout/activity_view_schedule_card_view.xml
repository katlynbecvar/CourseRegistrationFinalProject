<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/primaryLightColor"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
                android:id="@+id/instructor_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/instructor" />

        <TextView
                android:id="@+id/course_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/course_name_text_view"
                android:layout_below="@+id/instructor_text_view"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/course_number_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/course_name_text_view"
                android:text="@string/course_number_text_view"/>


            <TextView
                android:id="@+id/credit_hour_text_view"
                android:layout_below="@+id/course_number_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/credit_hours_text_view" />

</RelativeLayout>

</androidx.cardview.widget.CardView>